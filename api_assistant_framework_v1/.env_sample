# .env file for api_assistant_framework

# --- Database Configuration ---
# You can override the default DATABASE_URL from config.py here if needed
# Example for PostgreSQL:
# DATABASE_URL="postgresql+asyncpg://user:password@host:port/dbname"
# Example for default SQLite (same as in config.py):
DATABASE_URL="sqlite+aiosqlite:///./chat_state.db"

# --- API Specification File ---
# You can override the default API_SPEC_FILE from config.py here if needed
API_SPEC_FILE="petstore_v2.json"

# --- External API Keys (Add as needed) ---
# Example for OpenAI integration (uncomment and add your key when needed)
OPENAI_API_KEY="your_openai_api_key_here"
# Example API key for a target API the assistant might call
# TARGET_SERVICE_API_KEY="abc123xyz789"

TARGET_API_BASE_URL="https://petstore.swagger.io/v2"
TARGET_API_KEY="your_api_key_here"


